/**index.wxss**/

.page-section {
  padding: 0 32rpx 32rpx;
}

.footer {
  display: flex;
  padding-top: 8rpx;
}

.footer > .button {
  margin-right: 0;
}

.footer-buttons {
  display: flex;
  flex: 1;
}

.footer-buttons .button {
  flex: 1;
}

.button {
  height: 80rpx;
  font-size: 30rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  border: 2rpx solid #ddd;
  color: #666;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.button--primary {
  color: #fff;
  border: 2rpx solid #179c16;
  background: #179c16;
  font-weight: bold;
}

.button--warning {
  color: #fff;
  border: 2rpx solid #fa5151;
  background: #fa5151;
  font-weight: bold;
}

.button:active {
  opacity: .8;
}

.m-input {
  padding-right: 4rpx;
  height: 70rpx;
  line-height: 70rpx;
  flex: 1;
  text-align: right;
  color: #000;
}

.m-text {
  color: #000;
}

.history-box {
  width: 100%;
  height: 60rpx;
}

.history {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  line-height: 50rpx;
  text-align: center;
  color: #888;
  font-size: 26rpx;
  background: #fff;
}

.graph {
  animation: heartBeat 2s linear infinite both;
}

.m-cell{
  padding: 10rpx 0;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  font-size: 30rpx;
}
.m-cell::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background: #e5e5e5;
  transform: scaleY(.5);
}
.m-cell:last-child::after {
  visibility: hidden;
}

.m-cell:last-child {
  border-bottom: none;
}

.m-cell__hd{
  color: #222;
  height: 70rpx;
  line-height: 70rpx;
  flex: 1;
}

.m-cell__bd{
  font-size: 28rpx;
  text-align: right;
  flex: 1;
  line-height: 70rpx;
  color: #555;
  display: flex;
  align-items: center;
}

.address-placeholder{
    color: #c9c9c9;
  }

@keyframes heartBeat {
  0%{
    transform: scale(1);
  }
  50%{
    transform: scale(.8);
  }
  100%{
    transform: scale(1);
  }
}
